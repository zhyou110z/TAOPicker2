<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_color"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_good_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="清风纸巾"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_weight_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="12dp"
                android:text="称"
                android:textAlignment="viewEnd"
                android:textColor="@color/main_color"
                android:textSize="18dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_spec_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="规格："
                android:textColor="@color/Light_grey"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_good_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_spec_label"
                android:text="1盒/150g"
                android:textColor="@color/Light_grey"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_bar_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_spec_label"
                android:layout_marginTop="10dp"
                android:text="454566456"
                android:textColor="@color/medium_grey"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:text="x3"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_out_stock_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_num"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:text="缺1件（共50g）"
                android:textColor="@color/main_color"
                android:textSize="16dp"/>

            <LinearLayout
                android:id="@+id/ll_remark_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_bar_code"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需求："
                    android:textColor="@color/Light_grey"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宰杀"
                    android:textColor="@color/main_color"
                    android:textSize="16dp"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_divide"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>