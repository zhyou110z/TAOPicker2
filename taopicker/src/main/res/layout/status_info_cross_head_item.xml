<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/tv_bind_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/medium_grey"
            android:text="道口模式："/>

        <TextView
            android:id="@+id/tv_cross_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_bind_label"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="已开启"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_status_label"
            android:textSize="14dp"
            android:textColor="@color/medium_grey"
            android:text="道口类型："/>

        <TextView
            android:id="@+id/tv_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="正常道口"/>

        <TextView
            android:id="@+id/tv_operator_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bind_label"
            android:layout_marginTop="12dp"
            android:textSize="14dp"
            android:textColor="@color/medium_grey"
            android:text="道口状态："/>

        <TextView
            android:id="@+id/tv_stall_no_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_operator_label"
            android:layout_alignBaseline="@+id/tv_operator_label"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="待到达"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_vehicle_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/medium_grey"
            android:text="所有载具"/>

        <LinearLayout
            android:id="@+id/ll_vehicle_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="DD024515 系统下道口"/>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>